@model List<Gamersfable_prototype.Models.Story>

@{
    ViewBag.Title = "Index";
}

<h2>@ViewBag.StoriesGameTitle Stories</h2>

<p>
    @Html.ActionLink("Create New", "Create", "Stories")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model[0].Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Score)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Score)
        </td>
        <td>
            <a class="btn btn-default" href='@Url.Action("Details","Stories", new { id = item.Id })'>Read full &raquo;</a>
        </td>
    </tr>
}

</table>

<p>
    <a class="btn btn-default" href='@Url.Action("Index","Games")'>Back</a>
</p>
